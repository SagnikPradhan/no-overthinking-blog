{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "source",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}